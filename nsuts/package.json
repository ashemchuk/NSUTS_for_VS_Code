{
  "name": "nsuts",
  "displayName": "nsuts",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nsuts.auth",
        "title": "NSUTS: Auth"
      },
      {
        "command": "nsuts.submit",
        "title": "NSUTS: Submit",
        "icon": "$(beaker)"
      },
      {
        "command": "nsuts.select_task",
        "title": "NSUTS: Select task",
        "icon": "$(add)"
      },
      {
        "command": "nsuts.logout",
        "title": "NSUTS: Log out"
      },
      {
        "command": "nsuts.select_files",
        "title": "NSUTS: Select files"
      },
      {
        "command": "nsuts.select_compiler",
        "title": "NSUTS: Select compiler"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nsuts",
          "title": "NSUTS",
          "icon": "resources/nsuts-icon-light.svg"
        }
      ]
    },
    "views": {
      "nsuts": [
        {
          "id": "task-tree",
          "name": "Olympiads & Tours & Tasks",
          "icon": "resources/nsuts-icon-light.svg",
          "contextualTitle": "NSUTS",
          "visibility": "collapsed",
          "when": "nsuts.authorized"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "nsuts.submit",
          "when": "true",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nsuts.select_task",
          "when": "view == task-tree && viewItem == task",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "nsuts.auth",
          "when": "!nsuts.authorized"
        },
        {
          "command": "nsuts.logout",
          "when": "nsuts.authorized"
        },
        {
          "command": "nsuts.submit",
          "when": "nsuts.authorized"
        },
        {
          "command": "nsuts.select_task",
          "when": "nsuts.authorized"
        },
        {
          "command": "nsuts.select_files",
          "when": "nsuts.authorized"
        }
      ]
    },
    "configuration": [
      {
        "title": "NSUTS settings",
        "properties": {
          "nsuts.active_task": {
            "type": "object",
            "properties": {
              "taskId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "olympiadId": {
                "type": "string"
              },
              "tourId": {
                "type": "string"
              }
            }
          },
          "nsuts.tasks_context": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": ["files"],
              "properties": {
                "files": {
                  "type": "array",
                  "items": "string",
                  "default": []
                },
                "compiler": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "codegen": "openapi-typescript ../NSUTS_fresh_API.yaml -o src/api/api.d.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "openapi-fetch": "^0.15.0"
  }
}
