{
  "name": "nsuts-for-vs-code",
  "displayName": "NSUTS_for_VS_Code",
  "description": "plugin for working with NSUTest.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nsuts.selectOlympiad",
        "title": "NSUTS: Select Olympiad",
        "category": "NSUTS"
      },
      {
        "command": "nsuts.selectTour",
        "title": "NSUTS: Select Tour",
        "category": "NSUTS"
      },
      {
        "command": "nsuts.showTasks",
        "title": "NSUTS: Show Tasks",
        "category": "NSUTS"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nsuts-activity",
          "title": "NSUTS",
          "icon": "resources/nsuts-icon-light.svg"
        }
      ]
    },
    "views": {
      "nsuts-activity": [
        {
          "id": "nsuts-view",
          "name": "NSUTS Panel",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
